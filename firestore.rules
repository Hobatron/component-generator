rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner
    function isOwner(projectData) {
      return isSignedIn() && projectData.owner == request.auth.uid;
    }
    
    // Helper function to check if user is a collaborator
    function isCollaborator(projectData) {
      return isSignedIn() && 
        projectData.keys().hasAny(['collaborators']) &&
        projectData.collaborators.size() > 0 &&
        projectData.collaborators.hasAny([{'userId': request.auth.uid}]);
    }
    
    match /projects/{projectId} {
      // Allow read if user is owner or collaborator
      allow read: if isOwner(resource.data) || isCollaborator(resource.data);
      
      // Allow create if user sets themselves as owner
      allow create: if isSignedIn() && 
        request.resource.data.owner == request.auth.uid;
      
      // Allow update/delete only if user is owner
      allow update, delete: if isOwner(resource.data);
      
      // Nested collections within a project (schemas, items, etc.)
      match /{document=**} {
        // Allow read/write if user is owner or collaborator of parent project
        allow read, write: if isSignedIn() && 
          exists(/databases/$(database)/documents/projects/$(projectId)) && (
            isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data) ||
            isCollaborator(get(/databases/$(database)/documents/projects/$(projectId)).data)
          );
      }
    }
  }
}